<h1>Burgers to Eat</h1>

<ul>
	{{#each burgers}}
	<li>
		<h3>{{this.id}}. {{this.burger}}  <span><button class="burgerBtn btn btn-danger">Devour!</button></span></h3>
	</li>
	{{/each}}
</ul>

<h2>Add a burger you want to eat</h2>
<form method="POST" action="/create">
<textarea type="text" name="burger"></textarea>
<br>
<button type="submit" class="btn btn-warning">SAVE BURGER</button>
</form>

<h2>Update a Burger</h2>
<form method="POST" action="/update?_method=PUT">
<input type="text" name="id" placeholder="id">
<textarea type="text" name="burger" placeholder="What do you want to change about this burger?">
</textarea>
<button type="submit" class="btn btn-classic">UPDATE BURGER</button>
</form>